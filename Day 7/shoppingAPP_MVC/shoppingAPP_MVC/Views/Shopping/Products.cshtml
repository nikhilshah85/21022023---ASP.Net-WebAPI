



<script>
    function getProducts()
    {
        var url = "https://localhost:7073/api/Products";

        fetch(url).then(response => response.json())
                  .then(data =>{

                      for(var i=0;i<data.length;i++)
                      {
                    $("table").append("<tr>" +
                        "<td>" + data[i].pId + "</td>" +
                        "<td>" + data[i].pName + "</td>" +
                          "<td>" + data[i].pCategory + "</td>" +
                           "<td>" + data[i].pPrice + "</td>" +
                        "<td>" + data[i].pIsInStock + "</td>" +
                     "</tr>")
                      }
                  }).catch(err=>{
                      console.log(err);
                  })
    }
</script>





<button class="btn btn-warning" onclick="getProducts()"> Display Products </button>
<table class="table table-bordered"></table>
